<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorPrimaryDark"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.jallier.kitchentimer.MainActivity">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:background="@drawable/simple_circle"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/svTimer0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-light"
            android:onClick="svTimerStateChanged"
            android:paddingRight="10dp"
            android:text="@string/timerDefaultValue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/svBtnReset0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_reset_icon"
            android:layout_marginBottom="2dp"
            android:onClick="resetSvTimer"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/relativeLayout"
        android:background="@drawable/simple_circle"
        android:focusableInTouchMode="true"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/svTimer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-light"
            android:onClick="svTimerStateChanged"
            android:paddingRight="10dp"
            android:text="@string/timerDefaultValue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/svBtnReset1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_reset_icon"
            android:layout_marginBottom="2dp"
            android:onClick="resetSvTimer"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:background="@drawable/simple_circle"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/svTimer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-light"
            android:onClick="svTimerStateChanged"
            android:paddingRight="10dp"
            android:text="@string/timerDefaultValue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/svBtnReset2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_reset_icon"
            android:layout_marginBottom="2dp"
            android:onClick="resetSvTimer"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_toEndOf="@+id/relativeLayout2"
        android:background="@drawable/simple_circle"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/svTimer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-light"
            android:onClick="svTimerStateChanged"
            android:paddingRight="10dp"
            android:text="@string/timerDefaultValue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/svBtnReset3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_reset_icon"
            android:layout_marginBottom="2dp"
            android:onClick="resetSvTimer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_rounded_square"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/linearLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/svTimer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:onClick="svTimerStateChanged"
            android:text="@string/timerDefaultValue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark"
            android:layout_margin="10dp"
            android:textSize="45sp"/>

        <Button
            android:id="@+id/svBtnReset4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_reset_icon"
            android:onClick="resetSvTimer"/>
    </LinearLayout>


</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.jallier.kitchentimer.MainActivity"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="@drawable/simple_circle"
        android:minHeight="170dp"
        android:minWidth="170dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/timerDefaultValue"
            android:id="@+id/svTimer0"
            android:textColor="@android:color/primary_text_dark"
            android:onClick="svTimerStateChanged"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textSize="45sp"
            android:layout_marginTop="50dp"
            android:paddingRight="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:id="@+id/svBtnReset0"
            android:layout_gravity="center"
            android:onClick="resetSvTimer"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_circle"
        android:minHeight="170dp"
        android:minWidth="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/timerDefaultValue"
            android:id="@+id/svTimer1"
            android:textColor="@android:color/primary_text_dark"
            android:onClick="svTimerStateChanged"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textSize="45sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:paddingRight="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:id="@+id/svBtnReset1"
            android:layout_gravity="center"
            android:onClick="resetSvTimer"
            android:layout_below="@+id/svTimer1"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_circle"
        android:minHeight="170dp"
        android:minWidth="170dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/timerDefaultValue"
            android:id="@+id/svTimer2"
            android:textColor="@android:color/primary_text_dark"
            android:onClick="svTimerStateChanged"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textSize="45sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:paddingRight="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:id="@+id/svBtnReset2"
            android:layout_gravity="center"
            android:onClick="resetSvTimer"
            android:layout_below="@+id/svTimer2"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_circle"
        android:minHeight="170dp"
        android:minWidth="170dp"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/timerDefaultValue"
            android:id="@+id/svTimer3"
            android:textColor="@android:color/primary_text_dark"
            android:onClick="svTimerStateChanged"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textSize="45sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:paddingRight="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:id="@+id/svBtnReset3"
            android:layout_gravity="center"
            android:onClick="resetSvTimer"
            android:layout_below="@+id/svTimer3"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_rounded_square"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/timerDefaultValue"
            android:id="@+id/svTimer4"
            android:textColor="@android:color/primary_text_dark"
            android:onClick="svTimerStateChanged"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textSize="45sp"
            android:layout_marginTop="10dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:id="@+id/svBtnReset4"
            android:layout_gravity="center"
            android:onClick="resetSvTimer"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</RelativeLayout>
